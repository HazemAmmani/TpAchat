pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerHub')
    }

    stages {
        stage('Git') {
            steps {
                echo 'Getting Backend project from Git';
                 git branch:'Abdelhamid',
                 url: 'https://github.com/hazemAm28/TpAchat.git'
           }
        }
        
        
        
         stage('Mvn clean') {
            steps {
                sh 'mvn clean'
            }
        }
         stage('Mvn compile') {
            steps {
                sh 'mvn compile'
          }
        }
         stage('MVN SONARQUBE') {
            steps {
                sh 'mvn sonar:sonar  -Dsonar.login=admin -Dsonar.password=sonar'
            }
        }
        
         stage('Mvn Junit') {
            steps {
           
                sh 'mvn test'  
                }
            }

          stage('clean and package') {
            
            steps {
                sh 'mvn clean package'  
            }
     
            }
         stage('NEXUS'){
            steps{
                sh 'mvn deploy -DskipStaging=true'
            }
        }
        
        
        
 	stage("Building Docker Image") {
                steps{
                    sh 'docker build -t $DOCKERHUB_CREDENTIALS_USR/tpachat .'
                }
        }
	stage("Login to DockerHub") {
                steps{
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR -p $DOCKERHUB_CREDENTIALS_PSW'
                }
        }
	stage("Push to DockerHub") {
                steps{
                    sh 'docker push $DOCKERHUB_CREDENTIALS_USR/tpachat'
                    
                }  
        }
	stage("Docker-compose") {
                steps{
                    sh 'docker-compose up --force-recreate -d '
                }
        }
        post {
                success {
                     mail to: "abdelhamid.atallah@esprit.tn",
                     subject: "success",
                     body: "success on job ${env.JOB_NAME}, Build Number: ${env.BUILD_NUMBER}, Build URL: ${env.BUILD_URL}"
                }
                failure {
                    mail to: "abdelhamid.atallah@esprit.tn",
                     subject: "Failure",
                     body: "Failure on job ${env.JOB_NAME}, Build Number: ${env.BUILD_NUMBER}, Build URL: ${env.BUILD_URL} "     
                }
               }
         

         
    
       
    }    
   
}
